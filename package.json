{
  "name": "devconnector",
  "version": "1.0.0",
  "description": "Generic Questionnaire",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "test": "export NODE_ENV=test || SET NODE_ENV=test && jest ./tests/*.test.js",
    "dot": "export NODE_ENV=test || SET NODE_ENV=test && REPORTER=nyan jest ./tests/*.test.js",
    "test-watch": "nodemon --exec 'npm test'",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "author": "Tamas barabas",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "concurrently": "^4.0.1",
    "express": "^4.16.4",
    "express-request-id": "^1.4.1",
    "gravatar": "^1.6.0",
    "joi": "^14.3.0",
    "jsonwebtoken": "^8.3.0",
    "mongodb": "^3.1.10",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0"
  },
  "devDependencies": {
    "jest": "^24.1.0",
    "mocha": "^6.0.1",
    "mongodb-memory-server": "^3.1.1",
    "nodemon": "^1.18.5",
    "supertest": "^3.3.0"
  }
}
